    html={https://ieeexplore.ieee.org/abstract/document/11230760},
    keywords={GitOps, Intent-Based Networking, Nephio, Benchmarking, Cloud-Native Orchestration},
    address={Bologna, Italy},
    bibtex_show=true
}

@article{idsReview,
    title = {{Collaborative Intrusion Detection in Resource-constrained IoT environments: Challenges, Methods, and Future Directions a review}},
    journal = {Journal of Information Security and Applications},
