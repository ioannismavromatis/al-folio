---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{- page.title -}}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>
</div>

{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <article>
    {{ content }}
  </article>

  <!-- Social -->
  {% if page.social %}
    <div class="social">
      <div class="contact-icons">{% include social.liquid %}</div>

      <div class="contact-note">{{ site.contact_note }}</div>
    </div>
  {% endif %}
</div>
