@inproceedings{le3dDataDrift,
    author={{Mavromatis}, I. and {Sanchez-Mompo}, A. and {Raimondo}, F. and {Pope}, J. and {Bullo}, M. and {Weeks}, I. and {Kumar}, V. and {Carnelli}, P. and {Oikonomou}, G. and {Spyridopoulos}, T. and {Khan}, A.},
    title = {{LE3D: A Lightweight Ensemble Framework of Data Drift Detectors for Resource-Constrained Devices}},
