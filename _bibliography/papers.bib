@article{humanBodyTrackingDataset,
    title = {{A Dataset of Human Body Tracking of Walking Actions Captured using two Azure Kinect Sensors}},
    journal = {Data in Brief},
    volume = {49},
    pages = {109334},
    year = {2023},
    month={May},
    issn = {2352-3409},
    doi = {10.1016/j.dib.2023.109334},
    url = {https://www.sciencedirect.com/science/article/pii/S2352340923004523},
