    booktitle = {Security and Privacy in Smart Environments},
    publisher = {Springer},
    year = {2024},
    doi={10.1007/978-3-031-66708-4_5},
    html={https://link.springer.com/chapter/10.1007/978-3-031-66708-4_5},
    month = {October},
